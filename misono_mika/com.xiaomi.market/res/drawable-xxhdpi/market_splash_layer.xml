        <shape android:shape="rectangle">
            <gradient android:startColor="#f0ffffff" android:endColor="#ffffffff" android:angle="270.0" android:type="linear" />
        </shape>
    </item>
    <item android:gravity="center|top" android:id="@id/splash_cover_logo" android:height="@dimen/market_splash_cover_logo_height" android:width="@dimen/market_splash_cover_logo_width" android:drawable="@drawable/market_splash_logo" android:top="@dimen/market_splash_cover_logo_top_margin" />
</layer-list>