<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@id/splash_cover_bg_color" android:drawable="@color/white" />
    <item android:gravity="fill_horizontal|center|top" android:id="@id/splash_cover_bg" android:height="@dimen/market_splash_cover_bg_height" android:width="@dimen/market_splash_cover_bg_width" android:drawable="@drawable/market_splash_bg" />
